<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Camera2API" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleLeftTextView">
        <item name="android:width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="StyleCenterTextView" parent="@style/StyleLeftTextView">
        <item name="android:layout_marginVertical" tools:ignore="NewApi">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="StyleRightTextView" parent="@style/StyleLeftTextView">
        <item name="android:layout_marginVertical" tools:ignore="NewApi">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.Camera2API.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Camera2API.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Camera2API.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>